checkbox()
  label
    display inline-block
    padding-left 25px
    min-height 25px
    cursor pointer

  input
    position relative
    -webkit-appearance none
    margin-left -25px
    margin-right 15px
    margin-bottom -4px

    &:after
      width: 1.1rem;
      height: 1.1rem;
      border-color text
      border 1px solid
      border-radius 2px
      content ''
      display block
      transition 240ms

    &:checked:before
      position absolute
      display table
      left 7px
      top 1px
      width 5px
      height 12px
      -webkit-transform rotate(45deg)
      transform rotate(45deg)
      border 2px solid #fff
      border-top 0
      border-left 0
      content ''

    &:checked:after
      background-color button
      border-color button

    &:focus
      outline: none
