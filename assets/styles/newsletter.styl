.newsletter
  margin-top 150px

  .newsletter__header
    margin 0 auto 40px auto
    width 60%

  .newsletter__email-message, .newsletter__success-message
    margin-bottom 50px
    text-align center
    font-size 18px
    line-height 27px

  .newsletter__success-message
    padding-bottom 70px
    margin-bottom 0
    display none

  .newsletter__form
    max-width 820px
    padding 0 40px
    center()

    &:after
      clearfix()

    .newsletter__footer__button
      input
        float right
        width 280px
        height 50px
        background-color button
        border-radius 5px
        border 0

        font-size 18px
        line-height 23px
        color white

        &:hover
          background-color button-hover
          cursor pointer

    .newsletter__footer__checkbox-area
      float left
      clearfix()

      &__checkbox
        position relative
        display block

        checkbox()

    .newsletter__input-group
      position relative
      margin-bottom 45px
      float left
      box-sizing border-box

      &.has-error
        .newsletter__input-group__input
          border-bottom 1px solid error

      &--name
        margin-right 20px
        width percentage((280 - 20) / 780)

        input
          width 93%

      &--email
        width percentage(500 / 780)

        input
          width 96%

      .newsletter__input-group__label
        color rgba(0, 0, 0, 0.8)
        opacity: 0.3
        font-size 18px
        font-weight normal
        position absolute
        pointer-events none
        left 0
        top 24px
        transition 0.2s ease all
        -moz-transition 0.2s ease all
        -webkit-transition 0.2s ease all

      .newsletter__input-group__input
        display block
        height 27px
        padding 20px 20px 20px 0
        font-size 18px
        line-height 27px
        border none
        border-bottom 1px solid rgba(26, 26, 26, 0.3)

        &:focus
          outline none

        &:focus ~ label, &:valid ~ label
          top -10px
          font-size 14px
          color rgba(0, 0, 0, 0.8)
          opacity 0.3

        &:focus ~ .newsletter__input-group__bar:before, &:focus ~ .newsletter__input-group__bar:after
          width 50%

      .newsletter__input-group__bar
        position relative
        display block
        width 100%

        &--long
          width 100%

        &:before, &:after
          content ''
          height 2px
          width 0
          bottom 1px
          position absolute
          border-bottom 1px solid rgb(26, 26, 26)
          transition 0.2s ease all

        &:before
          left 50%

        &:after
          right 50%

    .errors
      position absolute
      right 0

      .help-block
        margin 0
        color error
        font-size 14px
        text-align right
