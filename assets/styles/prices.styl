.price-box
  center()
  margin-top 100px
  max-width 1180px

  .price-box__header
    margin 0 0 20px 0

  .price-box__description
    margin-bottom 50px
    font-size 18px

  .price-box__price-list
    .price-box__price-list-row
      display flex
      flex-flow row
      flex-wrap wrap
      margin-bottom 40px

      &:last-child
        margin-bottom 20px

      .price-box__price
        flex 1
        margin 0 10px

        &:first-child
          margin-left 0

        &:nth-child(4)
          margin-right 0

        img
          width 280px
          height 280px

        p
          font-size 18px
          line-height 27px
          margin 5px 0 0 0
