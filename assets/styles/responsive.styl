@media screen and (max-width: 1180px)
  .price-box
    .price-box__price-list
      .price-box__price-list-row
        .price-box__price
          img
            width 100%
            height auto

  footer
    h2.header, p
      text-align right
      margin-right 50px
      padding-right 0

@media screen and (max-width: 928px)
  h2, header
    padding 0 20px

  .newsletter
    .newsletter__header
      width auto

  footer
    .footer__links
      bottom 10px

      .footer__link
        display block

@media screen and (max-width: 768px)
  .price-box
    margin-top 100px

    .price-box__price-list
      .price-box__price-list-row
        .price-box__price
          flex 1 0 33.33333%
          margin-bottom 50px

          &:nth-child(2)
            margin-right 0

          img
            width 100%
            height auto

  .steps
    margin-top 50px

    .steps__visit
      padding-left 5%

  .newsletter
    margin-top 100px

    .newsletter__form
      .newsletter__footer__checkbox-area
        float none
        display block
        text-align left

      .newsletter__footer__button
        margin-top 20px

        input
          float none

  footer
    background-size 80%
    margin-top 0
    padding-top 50px

    h2.header
      margin-top 80px

    p
      float right
      width 50%

  .newsletter
    .newsletter__form
      .newsletter__input-group
        width 100%
        margin-right 0

        .newsletter__input-group__input
          width 100%
          padding 20px 0

  .claim
    .claim__logo
      margin 0

      img
        width 120px

    .claim__header
      margin-top 50px
