.steps
  margin-top 100px

  .steps__header
    margin 0

  .steps__visit
    margin-top 100px
    padding-top 5%
    padding-left 15%
    padding-bottom 5%
    step-background('alchymista-interier.png')

    .steps__visit__what-to-do
      margin 0 0 40px 0
      font-size 24px
      line-height 36px
      width 55%

  .steps__map
    height 450px
    position: relative;
    overflow: hidden;

    iframe
      pointer-events none
      position: absolute;
      top: 0;
      left: 0;
      width: 100% !important;
      height: 100% !important;
